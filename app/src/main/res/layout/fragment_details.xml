<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.DetailsFragment">
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

       <androidx.constraintlayout.widget.ConstraintLayout
           android:layout_width="match_parent"
           android:layout_height="match_parent">

           <TextView
               android:id="@+id/what_is"
               android:layout_width="0dp"
               android:layout_height="wrap_content"
               android:layout_marginStart="16dp"
               android:layout_marginLeft="16dp"
               android:layout_marginTop="32dp"
               android:layout_marginEnd="8dp"

               android:textSize="24sp"
               android:gravity="start"
               android:padding="12dp"
               android:textColor="@color/colorPrimary"

               android:layout_marginRight="8dp"
               android:text="What is The Disease"
               app:layout_constraintEnd_toEndOf="parent"
               app:layout_constraintStart_toStartOf="parent"
               app:layout_constraintTop_toTopOf="parent" />

           <TextView
               android:id="@+id/what"
               android:layout_width="0dp"
               android:layout_height="wrap_content"
               android:layout_marginStart="16dp"
               android:layout_marginLeft="16dp"
               android:layout_marginTop="16dp"
               android:layout_marginEnd="8dp"
               android:layout_marginRight="8dp"
               android:text="Lorem ipsum dolor sit amet, consectetuer adipiscing elit. Maecenas porttitor congue massa. Fusce posuere, magna sed pulvinar ultricies, purus lectus malesuada libero, sit amet commodo magna eros quis urna."

               android:textSize="15sp"
               android:padding="6dp"
               android:lineSpacingExtra="5dp"
               android:textColor="@color/text_color"

               app:layout_constraintEnd_toEndOf="parent"
               app:layout_constraintStart_toStartOf="parent"
               app:layout_constraintTop_toBottomOf="@+id/what_is" />

           <TextView
               android:id="@+id/causes"
               android:layout_width="0dp"
               android:layout_height="wrap_content"
               android:layout_marginStart="16dp"
               android:layout_marginLeft="16dp"
               android:layout_marginTop="16dp"
               android:layout_marginEnd="8dp"
               android:layout_marginRight="8dp"
               android:text="Causes of the Disease"

               android:textSize="24sp"
               android:gravity="start"
               android:padding="12dp"
               android:textColor="@color/colorPrimary"

               app:layout_constraintEnd_toEndOf="parent"
               app:layout_constraintStart_toStartOf="parent"
               app:layout_constraintTop_toBottomOf="@+id/what" />

           <TextView
               android:id="@+id/disease_cause"
               android:layout_width="0dp"
               android:layout_height="wrap_content"
               android:layout_marginStart="16dp"
               android:layout_marginLeft="16dp"
               android:layout_marginTop="16dp"
               android:layout_marginEnd="8dp"
               android:layout_marginRight="8dp"
               android:text="Lorem ipsum dolor sit amet, consectetuer adipiscing elit. Maecenas porttitor congue massa. Fusce posuere, magna sed pulvinar ultricies, purus lectus malesuada libero, sit amet commodo magna eros quis urna."

               android:textSize="15sp"
               android:padding="6dp"
               android:lineSpacingExtra="5dp"
               android:textColor="@color/text_color"

               app:layout_constraintEnd_toEndOf="parent"
               app:layout_constraintStart_toStartOf="parent"
               app:layout_constraintTop_toBottomOf="@+id/causes" />

           <TextView
               android:id="@+id/symptoms"
               android:layout_width="0dp"
               android:layout_height="wrap_content"
               android:layout_marginStart="16dp"
               android:layout_marginLeft="16dp"
               android:layout_marginTop="16dp"
               android:layout_marginEnd="8dp"
               android:layout_marginRight="8dp"
               android:text="Symptoms of the Disease"

               android:textSize="24sp"
               android:gravity="start"
               android:padding="12dp"
               android:textColor="@color/colorPrimary"

               app:layout_constraintEnd_toEndOf="parent"
               app:layout_constraintStart_toStartOf="parent"
               app:layout_constraintTop_toBottomOf="@+id/disease_cause" />

           <TextView
               android:id="@+id/disease_symptoms"
               android:layout_width="0dp"
               android:layout_height="wrap_content"
               android:layout_marginStart="16dp"
               android:layout_marginLeft="16dp"
               android:layout_marginTop="16dp"
               android:layout_marginEnd="8dp"
               android:layout_marginRight="8dp"
               android:text="Lorem ipsum dolor sit amet, consectetuer adipiscing elit. Maecenas porttitor congue massa. Fusce posuere, magna sed pulvinar ultricies, purus lectus malesuada libero, sit amet commodo magna eros quis urna."

               android:textSize="15sp"
               android:padding="6dp"
               android:lineSpacingExtra="5dp"
               android:textColor="@color/text_color"

               app:layout_constraintEnd_toEndOf="parent"
               app:layout_constraintStart_toStartOf="parent"
               app:layout_constraintTop_toBottomOf="@+id/symptoms" />

           <TextView
               android:id="@+id/treatment"
               android:layout_width="0dp"
               android:layout_height="wrap_content"
               android:layout_marginStart="16dp"
               android:layout_marginLeft="16dp"
               android:layout_marginTop="16dp"
               android:layout_marginEnd="8dp"
               android:layout_marginRight="8dp"
               android:text="How to avoid the Disease"

               android:textSize="24sp"
               android:gravity="start"
               android:padding="12dp"
               android:textColor="@color/colorPrimary"

               app:layout_constraintEnd_toEndOf="parent"
               app:layout_constraintStart_toStartOf="parent"
               app:layout_constraintTop_toBottomOf="@+id/disease_symptoms" />

           <TextView
               android:id="@+id/disease_treatment"
               android:layout_width="0dp"
               android:layout_height="wrap_content"
               android:layout_marginStart="16dp"
               android:layout_marginLeft="16dp"
               android:layout_marginTop="16dp"
               android:layout_marginEnd="8dp"
               android:layout_marginRight="8dp"
               android:text="Lorem ipsum dolor sit amet, consectetuer adipiscing elit. Maecenas porttitor congue massa. Fusce posuere, magna sed pulvinar ultricies, purus lectus malesuada libero, sit amet commodo magna eros quis urna."

               android:textSize="15sp"
               android:padding="6dp"
               android:lineSpacingExtra="5dp"
               android:textColor="@color/text_color"

               app:layout_constraintEnd_toEndOf="parent"
               app:layout_constraintStart_toStartOf="parent"
               app:layout_constraintTop_toBottomOf="@+id/treatment" />


       </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.core.widget.NestedScrollView>

</FrameLayout>